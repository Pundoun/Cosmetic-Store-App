<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:elevation="10dp"
    android:layout_marginVertical="5dp"
    android:layout_marginHorizontal="5dp"
    android:layout_height="130dp">
    <RelativeLayout
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:padding="8dp"
            android:layout_centerVertical="true"
            android:id="@+id/profile_image"
            android:paddingHorizontal="10dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"/>
        <LinearLayout
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_toEndOf="@id/profile_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="UselessParent">
                <TextView
                    android:fontFamily="@font/airbnb_cereal_app_medium"
                    android:text="Name"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="@color/colorBlack"
                    android:layout_weight="1"
                    android:id="@+id/tv_name_product"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:fontFamily="@font/airbnb_cereal_app_medium"
                    android:textAlignment="textEnd"
                    android:text="20000Vnd"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:layout_weight="1"
                    android:id="@+id/tv_price_product"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="UselessParent">
                <TextView
                    android:fontFamily="@font/airbnb_cereal_app_light"

                    android:text="Số lượng"
                    android:textSize="20sp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="@color/colorBlack"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:fontFamily="@font/airbnb_cereal_app_medium"
                    android:textAlignment="textEnd"
                    android:text="x3"
                    android:textSize="20sp"
                    android:textColor="@color/colorBlack"
                    android:layout_weight="1"
                    android:id="@+id/tv_number_product"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rl_configure"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="UselessParent">
                <ImageView
                    android:src="@drawable/baseline_delete_24"
                    android:layout_centerVertical="true"
                    android:id="@+id/remove"
                    android:layout_toStartOf="@id/ll_control_product"
                    android:layout_marginEnd="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:id="@+id/ll_control_product"
                    android:layout_marginVertical="5dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="end"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_decrease"
                        android:paddingHorizontal="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/increase_decrease_button_ic_decrease"
                        android:tint="#FF7E2E"
                        tools:ignore="UseAppTint" />

                    <TextView
                        android:fontFamily="@font/airbnb_cereal_app_medium"
                        android:id="@+id/tvNumber"
                        android:textSize="20sp"
                        android:textColor="#FF7E2E"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="1"
                        android:background="@android:color/transparent"
                        android:gravity="center" />

                    <ImageView
                        android:id="@+id/iv_increase"
                        android:paddingHorizontal="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/increase_decrease_button_ic_increase"
                        android:tint="#FF7E2E"
                        tools:ignore="UseAppTint" />


                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>