<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:elevation="10dp"
    android:layout_marginVertical="5dp"
    android:layout_marginHorizontal="5dp"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:fontFamily="@font/airbnb_cereal_app_medium"
            android:textSize="19sp"
            android:textColor="@color/colorTextBlack"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:id="@+id/tv_name_user"
            android:gravity="center_vertical"
            android:text="Ten user"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:fontFamily="@font/airbnb_cereal_app_medium"

                android:textSize="19sp"
                android:textColor="@color/colorTextBlack"
                android:paddingStart="10dp"
                android:id="@+id/tv_id_order"
                android:gravity="center_vertical"
                android:text="Ma hoa don"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <TextView
                android:fontFamily="@font/airbnb_cereal_app_medium"

                android:textColor="@color/colorTextBlack"
                android:textSize="19sp"
                android:id="@+id/tv_price_order"
                android:gravity="center"
                android:text="Ma hoa don"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:fontFamily="@font/airbnb_cereal_app_medium"
                android:textSize="19sp"
                android:textColor="@color/colorTextBlack"
                android:paddingStart="10dp"
                android:id="@+id/tv_name_product_order"
                android:gravity="center_vertical"
                android:text="Ten san pham"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <TextView
                android:fontFamily="@font/airbnb_cereal_app_medium"

                android:textColor="@color/colorTextBlack"
                android:textSize="19sp"
                android:id="@+id/tv_number_product_order"
                android:gravity="center"
                android:text="(2 san pham)"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>
        <LinearLayout
            android:paddingVertical="5dp"
            android:id="@+id/btn_monitor_order"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp">
            <LinearLayout
                android:id="@+id/ll_success_status"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:background="@drawable/bg_card_status"
                    android:layout_width="100dp"
                    android:layout_height="30dp">
                    <TextView
                        android:fontFamily="@font/airbnb_cereal_app_light"

                        android:textColor="@color/colorBlueSelected"
                        android:text="Thành công"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent">
                <TextView
                    android:fontFamily="@font/airbnb_cereal_app_medium"

                    android:id="@+id/tv_monitor"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:ellipsize="end"
                    android:gravity="center_vertical|end"
                    android:maxLines="1"
                    android:paddingStart="10dp"
                    android:text="Theo dõi đơn hàng"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    tools:ignore="RtlSymmetry" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/baseline_keyboard_arrow_right_24" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>